  body
    header(class='header')
      .header-inner
        h1.header-logo
          a(href='/login', target='_blank')
            img(src='http://mimg.127.net/logo/126logo.gif')
        nav.header-nav
          a(href='/login', target='_blank') 个人中心
          a(href='/login', target='_blank') 其他
          a(href='/login', target='_blank') 帮助信息
    section(class='main')
      .main-inner
        .login-box
          .login-header
            .login-normal 普通登录
            .login-other 其他登录
          .login-form
            form(action='/login', method='post')
              .login-line-input
                b.ico.ico-uid
                input.login-form-input(name='username')
                label.login-placeholder.login-placeholder-show 用户名
              .login-line-input
                b.ico.ico-pwd
                input.login-form-input(name='password', type='password')
                label.login-placeholder.login-placeholder-show 密码
              .login-line-check
              .login-line-btn
                button.btn.login-button(type='submit') 登  录
                button.btn.login-button.login-button-reg(href='', target='_blank') 注  册
              .login-line-cfg
    footer(class='footer')
      .footer-inner
        nav.footer-nav
          a(href='/login', target='_blank') 关于我们
          a.last(href='/login', target='_blank') 隐私政策
          |
          span.copyright 公司版权所有©1997-2014
          |
          a(href='/login', target='_blank') ICPB2-20090191
    iframe.login-frame(src='about:blank', name='login-frame') 登录iframe
